@
To make collecting arguments easier, we define a helper function [[get_args]] that extracts the number of arguments we expect.

<<Define function [[get_args]]>>=
char** get_args(int nargs, FILE* input_file)
{
    if (nargs == 0) return NULL;
    char** args = calloc(nargs, sizeof(char*));
    for (size_t i = 0; i < nargs; i++) {
        char c = fgetc(input_file);
        if (c != '(') {
            fprintf(LOGFILE, "I was hoping to find an opening paren for the next argument, but all I found was '%c'.\n", c);
            <<Exit with an error>>
        }
        int paren_depth = 1;
        char* arg = calloc(4096, sizeof(char));
        int arglen = 0;
        c = fgetc(input_file);
        if (c == ')') paren_depth--;
        if (c == '(') paren_depth++;
        while (paren_depth > 0 && arglen < 4095) {
            arg[arglen++] = c;
            c = fgetc(input_file);
            if (c == ')') paren_depth--;
            if (c == '(') paren_depth++;
        }
        arg[arglen++] = '\0';
        char* new_arg = realloc(arg, arglen * sizeof(char));
        if (new_arg == NULL) {
            <<Complain about memory problems>>
        }
        arg = new_arg;
        args[i] = arg;
    }
    return args;
}

