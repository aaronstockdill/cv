int id_len = 0;
<<Read identifier>>
if (id_len == 6 && strncmp(id, "define", 6) == 0 && run % 2 == 0) {
    <<Parse a macro definition>>
} else if (id_len == 8 && strncmp(id, "redefine", 8) == 0 && run % 2 == 0) {
    <<Parse a macro redefinition>>
} else if (id_len == 5 && strncmp(id, "input", 5) == 0) {
    fprintf(LOGFILE, "Odd run, only doing inputs.\n");
    <<Parse a file input>>
} else if (id_len > 0 && run % 2 == 0) {
    <<Parse a macro call>>
} else if (run % 2 == 1) {
    fprintf(output_file, "@%s", id);
} else {
    fprintf(LOGFILE, "That macro name I just read does not have any letters in it. That cannot be right!\n");
}
free(id);

